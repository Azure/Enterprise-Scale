{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Authorization/policyDefinitions",
            "apiVersion": "2020-03-01",
            "name": "Deny-HdInsight-NetworkProperties",
            "properties": {
                "policyType": "Custom",
                "mode": "Indexed",
                "displayName": "Azure HDInsight clusters should use private link",
                "description": "Enforces private link for HDInsight clusters.",
                "parameters": {
                    "effect": {
                        "type": "String",
                        "metadata": {
                            "displayName": "Effect",
                            "description": "Enable or disable the execution of the policy"
                        },
                        "allowedValues": [
                            "Audit",
                            "Disabled",
                            "Deny"
                        ],
                        "defaultValue": "Deny"
                    }
                },
                "policyRule": {
                    "if": {
                        "allOf": [
                            {
                                "field": "type",
                                "equals": "Microsoft.HDInsight/clusters"
                            },
                            {
                                "anyOf": [
                                    {
                                        "field": "Microsoft.HDInsight/clusters/networkProperties",
                                        "exists": false
                                    },
                                    {
                                        "field": "Microsoft.HDInsight/clusters/networkProperties.resourceProviderConnection",
                                        "exists": false
                                    },
                                    {
                                        "field": "Microsoft.HDInsight/clusters/networkProperties.resourceProviderConnection",
                                        "notEquals": "Outbound"
                                    },
                                    {
                                        "field": "Microsoft.HDInsight/clusters/networkProperties.privateLink",
                                        "exists": false
                                    },
                                    {
                                        "field": "Microsoft.HDInsight/clusters/networkProperties.privateLink",
                                        "notEquals": "Enabled"
                                    }
                                ]
                            }
                        ]
                    },
                    "then": {
                        "effect": "[[parameters('effect')]"
                    }
                },
                "metadata": {
                    "version": "1.0.0",
                    "category": "HDInsight"
                }
            }
        }
    ]
}
