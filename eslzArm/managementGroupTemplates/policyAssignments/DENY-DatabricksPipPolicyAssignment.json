{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "topLevelManagementGroupPrefix": {
            "type": "string",
            "metadata": {
                "description": "Provide the ESLZ company prefix to the intermediate root management group containing the policy definitions."
            }
        },
        "enforcementMode": {
            "type": "string",
            "allowedValues": [
                "Default",
                "DoNotEnforce"
            ],
            "defaultValue": "Default"
        },
        "nonComplianceMessageEnforcementModeReplacements": {
            "type": "object",
            "defaultValue": {
                "Default": "must",
                "DoNotEnforce": "should",
                "placeholder": "{enforcementMode}"
            }
        }
    },
    "variables": {
        "policyDefinitions": {
            "denyDatabricksPip": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('topLevelManagementGroupPrefix'), '/providers/Microsoft.Authorization/policyDefinitions/Deny-Databricks-NoPublicIp')]"
         },
        "policyAssignmentNames": {
            "denyDatabricksPip": "Deny-DataB-Pip",
            "description": "Prevent the deployment of Databricks workspaces that do not use the noPublicIp feature to host Databricks clusters without public IPs.",
            "displayName": "Prevent usage of Databricks with public IP",
            "nonComplianceMessage": "Databricks workspace {enforcementMode} use the noPublicIp feature to host Databricks clusters."
        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2019-09-01",
            "name": "[variables('policyAssignmentNames').denyDatabricksPip]",
            "properties": {
                "description": "[variables('policyAssignmentNames').description]",
                "displayName": "[variables('policyAssignmentNames').displayName]",
                "policyDefinitionId": "[variables('policyDefinitions').denyDatabricksPip]",
                "nonComplianceMessages": [
                    {
                        "message": "[replace(variables('policyAssignmentNames').nonComplianceMessage] , parameters('nonComplianceMessageEnforcementModeReplacements').placeholder, parameters('nonComplianceMessageEnforcementModeReplacements')[parameters('enforcementMode')])]"
                    }
                ],
                "enforcementMode": "[parameters('enforcementMode')]",
                "parameters": {
                    "effect": {
                        "value": "Deny"
                    }
                }
            }
        }
    ],
    "outputs": {}
}