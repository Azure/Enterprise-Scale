{
  "name": "Deploy-UserAssignedIdentity-VMInsights",
  "type": "Microsoft.Authorization/policyDefinitions",
  "apiVersion": "2021-06-01",
  "properties": {
    "policyType": "Custom",
    "mode": "All",
    "displayName": "Deploy User Assigned Identity for VM Insights",
    "description": "Policy to Deploy User Assigned Identity for VM Insights",
    "metadata": {
      "version": "1.0.0",
      "category": "Managed Identity",
      "source": "https://github.com/Azure/Enterprise-Scale/",
      "alzCloudEnvironments": [
        "AzureCloud",
        "AzureChinaCloud",
        "AzureUSGovernment"
      ]
    },
    "parameters": {
      "resourceGroupName": {
        "type": "String",
        "metadata": {
          "displayName": "Resource Group Name",
          "description": "Resource group name for the user assigned identity"
        }
      },
      "userAssignedIdentityLocation": {
        "type": "String",
        "metadata": {
          "displayName": "Identity Location",
          "description": "Location for the user assigned identity"
        }
      },
      "userAssignedIdentityName": {
        "type": "String",
        "metadata": {
          "displayName": "Identity Name",
          "description": "Name for the user assigned identity"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Resources/subscriptions"
          }
        ]
      },
      "then": {
        "effect": "deployIfNotExists",
        "details": {
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ],
          "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
          "existenceScope": "resourcegroup",
          "resourceGroupName": "[[parameters('resourceGroupName')]",
          "deploymentScope": "subscription",
          "existenceCondition": {
            "allOf": [
              {
                "field": "identity.type",
                "contains": "UserAssigned"
              }
            ]
          },
          "deployment": {
            "location": "northeurope",
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "ResourceGroupName": {
                    "type": "string"
                  },
                  "userAssignedIdentityLocation": {
                    "type": "string"
                  },
                  "userAssignedIdentityName": {
                    "type": "string"
                  }
                },
                "resources": [
                  {
                    "type": "Microsoft.Resources/resourceGroups",
                    "apiVersion": "2021-04-01",
                    "name": "[[parameters('ResourceGroupName')]",
                    "location": "[[parameters('userAssignedIdentityLocation')]"
                  },
                  {
                    "type": "Microsoft.Resources/deployments",
                    "apiVersion": "2021-04-01",
                    "name": "UserIdentityDeployment",
                    "resourceGroup": "[[parameters('ResourceGroupName')]",
                    "dependsOn": [
                      "[[concat('Microsoft.Resources/resourceGroups/', parameters('ResourceGroupName'))]"
                    ],
                    "properties": {
                      "mode": "Incremental",
                      "template": {
                        "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                        "contentVersion": "1.0.0.0",
                        "parameters": {
                          "ResourceGroupName": {
                            "type": "string"
                          },
                          "userAssignedIdentityLocation": {
                            "type": "string"
                          },
                          "userAssignedIdentityName": {
                            "type": "string"
                          }
                        },
                        "variables": {},
                        "resources": [
                          {
                            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
                            "apiVersion": "2018-11-30",
                            "name": "[[parameters('userAssignedIdentityName')]",
                            "location": "[[parameters('userAssignedIdentityLocation')]",
                            "dependsOn": [
                              "[[concat('Microsoft.Resources/resourceGroups/', parameters('ResourceGroupName'))]"
                            ]
                          }
                        ]
                      },
                      "parameters": {
                        "ResourceGroupName": {
                          "value": "[[parameters('ResourceGroupName')]"
                        },
                        "userAssignedIdentityLocation": {
                          "value": "[[parameters('userAssignedIdentityLocation')]"
                        },
                        "userAssignedIdentityName": {
                          "value": "[[parameters('userAssignedIdentityName')]"
                        }
                      }
                    }
                  }
                ]
              },
              "parameters": {
                "ResourceGroupName": {
                  "value": "[[parameters('ResourceGroupName')]"
                },
                "userAssignedIdentityLocation": {
                  "value": "[[parameters('userAssignedIdentityLocation')]"
                },
                "userAssignedIdentityName": {
                  "value": "[[parameters('userAssignedIdentityName')]"
                }
              }
            }
          }
        }
      }
    }
  }
}
