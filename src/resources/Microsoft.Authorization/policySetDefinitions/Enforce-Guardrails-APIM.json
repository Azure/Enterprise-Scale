            "apimEncryptedProtocols": {
                "type": "string",
                "defaultValue": "Deny"
            },
            "apimVnetUsage": {
                "type": "string",
                "defaultValue": "Deny"
            },
            "apimSecrets": {
                "type": "string",
                "defaultValue": "Deny"
            },
            "apimTls": {
                "type": "string",
                "defaultValue": "Deny"
            }
